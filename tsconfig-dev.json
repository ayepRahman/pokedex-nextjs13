{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@app/*": ["app/*"],
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@hooks/*": ["hooks/*"],
      "@images/*": ["public/images/*"],
      "@icons/*": ["public/icons/*"],
      "@svgs/*": ["public/svgs/*"],
      "@fonts/*": ["public/fonts/*"],
      "@config/*": ["config/*"],
      "@contexts/*": ["contexts/*"],
      "@constants/*": ["constants/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "ts-node": {
    "files": true
  },
  "files": ["types/**.d.ts"]
}
